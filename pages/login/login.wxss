/* pages/login/login.wxss */

page{
    background-color:#fff;
    font-size:40rpx;
}
/*border:1px solid blue;*/
.login{
  
  border-radius: 12px;
  height: 1000rpx;
  width: 100%;
}
/**/
.login image{
   border:1px solid rgb(242, 242, 245);
   border-radius: 100%;
   width:480rpx;
   height:480rpx;
   display:block;
   margin: 0 auto;
}
.section{
    display: flex;
    flex-direction: row;
    justify-content: center;
    line-height:80rpx;
    height:auto;
    width:100%;
    float: left;
    margin-top: 58rpx;
}

/* */ 
input{
    border:1px solid rgb(10, 237, 253);
    line-height:80rpx;
    height:80rpx;
    width:80%;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-left: 12rpx;
    padding-left:20rpx;
}

.button-hover {
    background-color: #b02923;

}

/** 添加自定义button点击态样式类**/

.other-button-hover {
    background-color: #1cdaf3;
    color:#fff;
}
.viewBtn{
   margin: 0 auto;
}
button{
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  background: #00CCFF;
  color:#FFFFFF;
  float: left;
  margin-left: 18%;
  margin-top: 58rpx;
}

.userError{
    border-color:#b02923;

}
.versions{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 50rpx;
  
}
.versionRight{
  border:1px solid white;
  width: 100%;
  height: 50rpx;
  margin-left: 132rpx;
}